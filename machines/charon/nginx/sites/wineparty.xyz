
server {
  listen 443 ssl;
  server_name www.wineparty.xyz;
  root /www/wineparty.xyz/public;
  index index.html index.htm;

  ssl_certificate /etc/letsencrypt/live/wineparty.xyz/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/wineparty.xyz/privkey.pem;

  location / {
    try_files $uri $uri/ =404;
  }
}

server {
  listen 80;
  server_name wineparty.xyz www.wineparty.xyz;
  return 301 https://www.wineparty.xyz$request_uri;
}

server {
  listen 443 ssl;
  server_name wineparty.xyz;
  return 301 https://www.wineparty.xyz$request_uri;
}
